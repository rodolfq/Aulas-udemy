using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Globalization;

namespace ConsoleApplication
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Digite a nota da av1 ");
            double n1 = float.Parse(Console.ReadLine() , CultureInfo.InvariantCulture);
            Console.WriteLine("Digite a nota da av2 ");
            double n2 = float.Parse(Console.ReadLine() , CultureInfo.InvariantCulture);

            double media = (n1 + n2) / 2;

            Console.WriteLine("Sua média é: " + media, "F1", CultureInfo.InvariantCulture);
        }
    }
}
